        <!--</RelativeLayout>-->

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="invisible"
            custom:pager_animation_span="1100"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:id="@+id/progress_bar_01"
                    android:layout_width="16dp"
                    android:layout_height="192dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dashboard_men"
                    android:scaleType="fitCenter"
                    style="@style/DashboardStaticImage"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:id="@+id/progress_bar_02"
                    android:layout_width="16dp"
                    android:layout_height="192dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/img_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dashboard_women"
                    android:scaleType="fitCenter"
                    style="@style/DashboardStaticImage"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:id="@+id/progress_bar_03"
                    android:layout_width="16dp"
                    android:layout_height="192dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/img_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dashboard_new_arrival"
                    android:scaleType="fitCenter"
                    style="@style/DashboardStaticImage"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">
                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:id="@+id/progress_bar_04"
                    android:layout_width="16dp"
                    android:layout_height="192dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/img_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dashboard_sale"
                    android:scaleType="fitCenter"
                    style="@style/DashboardStaticImage"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
